.shoppingCart{
  /* position: relative; */
  position: fixed;
  bottom:100rpx;
  margin:0 24rpx;
  width:702rpx;
  height:88rpx;
  background: #262109;
  box-shadow: 0 5rpx 10px 0 rgba(0,0,0,0.20);
  border-radius: 100rpx;
  color:#fff;
}

.shoppingCart .logo-wrap{
  float:left;
  margin:15rpx 18rpx 0 40rpx;
}
.shoppingCart .logo{
  display: inline-block;
  width: 58rpx;
  height:55rpx;
}
.shoppingCart view{
  display: inline-block;
}

.shoppingCart .price{
  font-size:34rpx;
  margin-right: 10rpx;
}
.shoppingCart .oldPrice{
  font-size:24rpx;
  text-decoration: line-through;
  opacity: .5;
}
.shoppingCart .memPrice{
  display: block;
  font-size:24rpx;
  opacity: .5;
  padding-left:10rpx;
}

.shoppingCart .pay{
  position:absolute;
  right:0;top:0;
  width:168rpx;height:88rpx;
  background: #FF4500;
  box-shadow: 0 5px 10rpx 0 rgba(0,0,0,0.20);
  border-radius: 0 56rpx 56rpx 0;
  line-height: 88rpx;text-align: center;
  font-size:34rpx;
}



























